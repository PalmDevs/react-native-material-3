{
    "name": "react-native-material3",
    "version": "0.1.0",
    "description": "Material 3 components for React Native. A more up-to-date alternative to React Native Paper.",
    "main": "lib/module/index",
    "module": "lib/module/index",
    "types": "lib/typescript/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "!lib/typescript/example",
        "!ios/build",
        "!android/build",
        "!android/gradle",
        "!android/gradlew",
        "!android/gradlew.bat",
        "!android/local.properties",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__",
        "!**/.*"
    ],
    "scripts": {
        "prepare": "husky install",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint --cache \"**/*.{js,jsx,ts,tsx}\"",
        "lint:fix": "eslint --cache \"**/*.{js,jsx,ts,tsx}\" --fix",
        "build": "bob build",
        "release": "semantic-release",
        "commitlint": "commitlint --edit"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": "https://github.com/PalmDevs/react-native-material3",
    "author": "PalmDevs <palmpasuthorn@gmail.com> (https://github.com/PalmDevs)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/PalmDevs/react-native-material3/issues"
    },
    "homepage": "https://github.com/PalmDevs/react-native-material3#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.7",
        "@commitlint/config-conventional": "^17.6.7",
        "@evilmartians/lefthook": "^1.4.7",
        "@react-native-community/eslint-config": "^3.2.0",
        "@types/jest": "^29.5.3",
        "@types/react": "~18.2.17",
        "@types/react-native": "0.72.2",
        "del-cli": "^5.0.0",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^8.9.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^8.0.3",
        "jest": "^29.6.2",
        "prettier": "^3.0.0",
        "react": "18.2.0",
        "react-native": "0.72.3",
        "react-native-builder-bob": "^0.21.3",
        "typescript": "^5.1.6"
    },
    "resolutions": {
        "@types/react": "17.0.21"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "engines": {
        "node": ">= 16.0.0"
    },
    "dependencies": {
        "@pchmn/expo-material3-theme": "^1.3.1"
    }
}
