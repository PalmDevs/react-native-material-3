{
    "name": "react-native-material-3",
    "description": "Material Design 3 components library for React Native with support for dynamic theming and interactivity out of the box",
    "version": "0.1.0",
    "scripts": {
        "watch": "nodemon --watch . --ext ts,tsx,js,jsx,json --exec \"bob build\"",
        "prepare": "lefthook install",
        "example": "cd example && npm start",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint --cache \"**/*.{js,jsx,ts,tsx}\"",
        "lint:fix": "eslint --cache \"**/*.{js,jsx,ts,tsx}\" --fix",
        "build": "bob build",
        "release": "semantic-release",
        "commitlint": "commitlint --edit"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PalmDevs/react-native-material-3.git"
    },
    "author": "PalmDevs <palmpasuthorn@gmail.com> (https://github.com/PalmDevs)",
    "license": "GPL-3.0-only",
    "bugs": {
        "url": "https://github.com/PalmDevs/react-native-material-3/issues"
    },
    "homepage": "https://github.com/PalmDevs/react-native-material-3#readme",
    "main": "dist/commonjs/index",
    "module": "dist/module/index",
    "types": "dist/typescript/src/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "engines": {
        "node": ">= 16.0.0"
    },
    "dependencies": {
        "@react-native-community/hooks": "^3.0.0",
        "react-native-style-utilities": "^1.0.1",
        "tinycolor2": "^1.6.0"
    },
    "devDependencies": {
        "@babel/runtime": "^7.23.2",
        "@commitlint/cli": "^17.7.2",
        "@commitlint/config-conventional": "^17.7.0",
        "@evilmartians/lefthook": "^1.5.2",
        "@react-native-community/eslint-config": "^3.2.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/jest": "^29.5.5",
        "@types/react": "~18.2.28",
        "@types/react-native": "0.72.3",
        "@types/tinycolor2": "^1.4.4",
        "conventional-changelog-conventionalcommits": "^7.0.2",
        "del-cli": "^5.1.0",
        "eslint": "^8.51.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-prettier": "^5.0.1",
        "jest": "^29.7.0",
        "lefthook": "^1.5.2",
        "metro-react-native-babel-preset": "^0.77.0",
        "prettier": "^3.0.3",
        "react-native-builder-bob": "^0.23.1",
        "semantic-release": "^22.0.5",
        "typescript": "^5.2.2"
    },
    "overrides": {
        "@expo/image-utils": {
            "semver": "^7.5.4"
        }
    },
    "peerDependencies": {
        "@pchmn/expo-material3-theme": "~1.3.1",
        "react": "~18.2.0",
        "react-native": "~0.72.0",
        "react-native-reanimated": "~3.3.0",
        "@expo/vector-icons": "~13.0.0"
    },
    "files": [
        "dist",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "!ios/build",
        "!android/build",
        "!android/gradle",
        "!android/gradlew",
        "!android/gradlew.bat",
        "!android/local.properties",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__",
        "!**/.*"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "nodemonConfig": {
        "ignore": [
            "dist",
            "node_modules"
        ]
    }
}
