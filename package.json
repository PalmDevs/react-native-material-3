{
    "name": "react-native-material3",
    "description": "Material Design 3 components library for React Native with support for interactivity out of the box.",
    "version": "0.1.0",
    "scripts": {
        "prepare": "lefthook install",
        "example": "cd example && npm start",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint --cache \"**/*.{js,jsx,ts,tsx}\"",
        "lint:fix": "eslint --cache \"**/*.{js,jsx,ts,tsx}\" --fix",
        "build": "bob build",
        "release": "semantic-release",
        "commitlint": "commitlint --edit"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PalmDevs/react-native-material3.git"
    },
    "author": "PalmDevs <palmpasuthorn@gmail.com> (https://github.com/PalmDevs)",
    "license": "GPL-3.0-only",
    "bugs": {
        "url": "https://github.com/PalmDevs/react-native-material3/issues"
    },
    "homepage": "https://github.com/PalmDevs/react-native-material3#readme",
    "main": "dist/module/index",
    "module": "dist/module/index",
    "types": "dist/typescript/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "engines": {
        "node": ">= 16.0.0"
    },
    "dependencies": {
        "@pchmn/expo-material3-theme": "^1.3.1",
        "@react-native-community/hooks": "^3.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.7",
        "@commitlint/config-conventional": "^17.6.7",
        "@evilmartians/lefthook": "^1.4.8",
        "@react-native-community/eslint-config": "^3.2.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/jest": "^29.5.3",
        "@types/react": "~18.2.18",
        "@types/react-native": "0.72.2",
        "conventional-changelog-conventionalcommits": "^6.1.0",
        "del-cli": "^5.0.0",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.6.2",
        "lefthook": "^1.4.8",
        "prettier": "^3.0.1",
        "react": "18.2.0",
        "react-native": "0.72.3",
        "react-native-builder-bob": "^0.21.3",
        "semantic-release": "^21.0.7",
        "typescript": "^5.1.6"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "files": [
        "dist",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "!ios/build",
        "!android/build",
        "!android/gradle",
        "!android/gradlew",
        "!android/gradlew.bat",
        "!android/local.properties",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__",
        "!**/.*"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    }
}
